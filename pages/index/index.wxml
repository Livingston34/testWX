<!--index.wxml-->
<view class="container">
  <div style="position:relative;width:100%;height: 300px; display: none;" >
    <image class="c_{{index}}" wx:for="{{stoneArr}}" src="../image/g.jpeg" style='width:40px;height:40px;position:absolute; left:{{item.x}}px;top:{{item.y}}px'></image>
  </div>
  <view style='width: 100%; height: {{height}}px;'>
    <view wx:for="{{colorArr}}" wx:for-index="index1"  class="flex-row" style="display: flex;flex-direction: row; height: 20%; ">
        <view wx:for="{{colorArr}}" class="flex-view-item">
          <image wx:if="{{stoneArr[index1*5+index]==1}}" src="../image/g.jpeg" style='width:40px;height:40px;'></image>
        </view>
    </view>
  </view>
</view>
